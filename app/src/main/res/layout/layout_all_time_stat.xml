<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/section_all_time"
            android:text="@string/section_all_time"
            style="@style/SectionTitle"/>

        <!-- Days -->
        <TextView
            android:id="@+id/all_time_days"
            android:layout_below="@id/section_all_time"
            android:layout_marginRight="@dimen/card_padding"
            android:layout_alignParentRight="true"
            style="@style/CurrentValue"/>

        <TextView
            android:id="@+id/all_time_days_title"
            android:text="@string/days"
            android:layout_toLeftOf="@id/all_time_days"
            android:layout_below="@id/section_all_time"
            style="@style/MetricTitle"/>

        <!-- Sets -->
        <TextView
            android:id="@+id/all_time_sets"
            android:layout_below="@id/all_time_days"
            android:layout_marginRight="@dimen/card_padding"
            android:layout_alignParentRight="true"
            style="@style/CurrentValue"/>

        <TextView
            android:id="@+id/all_time_sets_title"
            android:text="@string/trainings"
            android:layout_toLeftOf="@id/all_time_sets"
            android:layout_below="@id/all_time_days"
            style="@style/MetricTitle"/>

        <!-- Overall pull-ups -->
        <TextView
            android:id="@+id/all_time_total"
            android:layout_below="@id/all_time_sets"
            android:layout_marginRight="@dimen/card_padding"
            android:layout_alignParentRight="true"
            style="@style/CurrentValue"/>

        <TextView
            android:id="@+id/all_time_total_title"
            android:text="@string/total"
            android:layout_toLeftOf="@id/all_time_total"
            android:layout_below="@id/all_time_sets"
            style="@style/MetricTitle"/>

        <!-- Record -->
        <TextView
            android:id="@+id/all_time_record"
            android:layout_below="@id/all_time_total"
            android:layout_marginRight="@dimen/card_padding"
            android:layout_alignParentRight="true"
            style="@style/CurrentValue"/>

        <TextView
            android:id="@+id/all_time_record_title"
            android:text="@string/record"
            android:layout_toLeftOf="@id/all_time_record"
            android:layout_below="@id/all_time_total"
            style="@style/MetricTitle"/>

    </RelativeLayout>

    <ViewStub
        android:id="@+id/stub_card_dialog"
        android:inflatedId="@+id/card_dialog"
        android:layout="@layout/layout_reset_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ImageButton
        android:id="@+id/reset_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dots_button"
        android:background="@null"
        android:paddingLeft="48dp"
        android:layout_gravity="top|right" />

</merge>
