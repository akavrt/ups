<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:stretchColumns="0">

    <TableRow
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_span="4"
            android:id="@+id/section_title"
            android:layout_marginBottom="0dp"
            style="@style/CardPrimaryTitle"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_column="1"
            android:text="@string/total"
            style="@style/MetricTitle"/>

        <TextView
            android:layout_column="2"
            android:text="@string/trainings"
            style="@style/MetricTitle"/>

        <TextView
            android:layout_column="3"
            android:text="@string/record"
            style="@style/MetricTitle"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/current_interval_title"
            style="@style/IntervalTitle"/>

        <TextView
            android:id="@+id/curr_pull_ups"
            style="@style/CurrentIntervalValue"/>

        <TextView
            android:id="@+id/curr_sets"
            style="@style/CurrentIntervalValue"/>

        <TextView
            android:id="@+id/curr_record"
            style="@style/CurrentIntervalValue"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/previous_interval_title"
            style="@style/IntervalTitle"/>

        <TextView
            android:id="@+id/prev_pull_ups"
            style="@style/PreviousIntervalValue"/>

        <TextView
            android:id="@+id/prev_sets"
            style="@style/PreviousIntervalValue"/>

        <TextView
            android:id="@+id/prev_record"
            style="@style/PreviousIntervalValue"/>
    </TableRow>

</merge>