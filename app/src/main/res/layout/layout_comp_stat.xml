<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/section_title"
        style="@style/SectionTitle"/>

    <!-- Sets -->
    <TextView
        android:id="@+id/sets_delta"
        android:layout_below="@id/section_title"
        style="@style/DeltaValue"/>

    <TextView
        android:id="@+id/sets"
        android:layout_toLeftOf="@id/sets_delta"
        android:layout_below="@id/section_title"
        style="@style/CurrentValue"/>

    <TextView
        android:id="@+id/sets_title"
        android:text="@string/trainings"
        android:layout_toLeftOf="@id/sets"
        android:layout_below="@id/section_title"
        style="@style/MetricTitle"/>

    <!-- Overall pull-ups -->
    <TextView
        android:id="@+id/total_delta"
        android:layout_below="@id/sets_delta"
        style="@style/DeltaValue"/>

    <TextView
        android:id="@+id/total"
        android:layout_toLeftOf="@id/total_delta"
        android:layout_below="@id/sets_delta"
        style="@style/CurrentValue"/>

    <TextView
        android:id="@+id/total_title"
        android:text="@string/total"
        android:layout_toLeftOf="@id/total"
        android:layout_below="@id/sets_delta"
        style="@style/MetricTitle"/>

    <!-- Record -->
    <TextView
        android:id="@+id/record_delta"
        android:layout_below="@id/total_delta"
        style="@style/DeltaValue"/>

    <TextView
        android:id="@+id/record"
        android:layout_toLeftOf="@id/record_delta"
        android:layout_below="@id/total_delta"
        style="@style/CurrentValue"/>

    <TextView
        android:id="@+id/record_title"
        android:text="@string/record"
        android:layout_toLeftOf="@id/record"
        android:layout_below="@id/total_delta"
        style="@style/MetricTitle"/>

</merge>