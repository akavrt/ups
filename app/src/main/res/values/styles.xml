<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/window_background</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:colorBackground">@color/window_background</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>

        <item name="android:actionBarTabTextStyle">@style/MyTabText</item>
        <item name="actionBarTabTextStyle">@style/MyTabText</item>

        <item name="android:actionBarDivider">@android:color/darker_gray</item>
        <item name="actionBarDivider">@android:color/darker_gray</item>

        <item name="android:actionBarTabBarStyle">@style/MyTabBar</item>
        <item name="actionBarTabBarStyle">@style/MyTabBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>

        <!--<item name="android:backgroundStacked">@color/window_background</item>-->
        <!--<item name="backgroundStacked">@color/window_background</item>-->

        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>

        <item name="android:icon">@drawable/ic_actionbar</item>
        <item name="icon">@drawable/ic_actionbar</item>
    </style>

    <style name="MyActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="MyTabBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:divider">?android:attr/dividerVertical</item>
    </style>

    <style name="MyTabText"
        parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/action_bar_tabs_text</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginLeft">@dimen/card_padding_relaxed</item>
        <item name="android:layout_marginRight">@dimen/card_padding_relaxed</item>
    </style>

    <style name="CardGroupWithButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_with_button_bottom_padding</item>
        <item name="android:background">@drawable/card_background</item>
    </style>

    <style name="CardGroup" parent="@style/CardGroupWithButton">
        <item name="android:paddingBottom">@dimen/card_padding</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginLeft">@dimen/card_padding</item>
        <item name="android:layout_marginRight">@dimen/card_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_title_margin</item>
    </style>

    <style name="MetricTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_padding</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/card_primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CurrentValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/card_primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/default_value</item>
    </style>

    <style name="DeltaValue">
        <item name="android:layout_width">@dimen/delta_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/card_padding</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/card_secondary_text</item>
        <item name="android:text">@string/default_value</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="CardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_button</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@drawable/card_button_text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="CardButtonWithAccent" parent="@style/CardButton" >
        <item name="android:textColor">@drawable/manage_count_button_text</item>
    </style>

    <style name="CounterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/counter_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/card_primary_text</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CounterUnitsText" parent="@style/CounterText">
        <item name="android:textSize">@dimen/counter_units_text_size</item>
    </style>

    <style name="MarginPoint">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AdjustValueParent">
        <item name="android:layout_width">@dimen/adjust_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="AdjustPrevValue" parent="@style/AdjustValueParent">
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:drawableLeft">@drawable/prev_value_button</item>
    </style>

    <style name="AdjustNextValue" parent="@style/AdjustValueParent">
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:drawableRight">@drawable/next_value_button</item>
    </style>

</resources>
